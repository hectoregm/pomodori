h1 Tasks

button type="button" class="btn btn-primary btn-lg new-task"
  = link_to 'New Task', new_task_path, class: 'btn-link'

.tasks.list-group
  - @tasks.each do |task|
    li.list-group-item
      = link_to task.name, task
      button type='button' class='btn btn-success start'
        = link_to 'Start Work', new_task_pomodoro_path(task), class: 'btn-link'
      button type='button' class='btn btn-danger destroy'
        = link_to 'Destroy', task, data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn-link'


